<view class='page-body'>
  <form catchsubmit="formSubmit">
    <view class='line'>
      <label class='label' for='section'>申请部门</label>
      <picker bindchange="sectionPickerChange" id='section' name='section' value="{{indexOfSection}}" range="{{section}}">
        <view class="picker">
          {{section[indexOfSection]}}
        </view>
      </picker>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='obey'>调剂</label>
      <label class='label' wx:if='{{obey}}'>同意</label>
      <label class='label' wx:else>不同意</label>
      <switch checked bindchange="switchChange"/>
    </view>
    <view class='underline'></view>
    <view class="title">
      <view class="left-line"></view>
      <view class="content">对部门的理解</view>
      <view class="right-line"></view>
    </view>
    <textarea class="text" placeholder="请输入你对部门的理解" bindinput="textInput" maxlength="-1"></textarea>
    <view class="count">{{count}}/{{limit}}</view>
    <view class='underline'></view>
    <button type='default' form-type='submit'>下一步</button>

  </form>
</view>

<import src="../../../templates/footer" />
<template is="join" data="{{text: 'forbar'}}" />