<view class='page-body'>
  <form catchsubmit="formSubmit">
    <view class='line'>
      <label class='label' for='name'>姓名</label>
      <input type='text' id='name' name='name' placeholder='请输入姓名' value="{{name}}"></input>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='id'>学号</label>
      <input type='number' id='id' name='id' placeholder='请输入学号' value="{{id}}"></input>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='gender'>性别</label>
      <radio-group name='gender'>
        <radio id='male' name='gender' value='male' checked></radio>
        <label class='choose' for='male'>男</label>
        <radio id='female' name='gender' value='female'></radio>
        <label class='choose' for='female'>女</label>
      </radio-group>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='policy'>政治面貌</label>
      <picker bindchange="policyPickerChange" id='policy' name='policy' value="{{indexOfPolicy}}" range="{{policy}}">
        <view class="picker">
          {{policy[indexOfPolicy]}}
        </view>
      </picker>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='institute'>学院</label>
      <picker bindchange="institutePickerChange" id='institute' name='institute' value="{{indexOfInstitute}}" range="{{institute}}">
        <view class="picker">
          {{institute[indexOfInstitute]}}
        </view>
      </picker>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='profession'>专业</label>
      <picker bindchange="professionPickerChange" id='profession' name='profession' value="{{indexOfProfession}}" range="{{profession}}">
        <view class="picker">
          {{profession[indexOfProfession]}}
        </view>
      </picker>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='phone'>手机号</label>
      <input type='number' id='phone' name='phone' placeholder='请输入手机号' value="{{phone}}"></input>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='QQ'>QQ号</label>
      <input type='number' id='QQ' name='QQ' placeholder='请输入QQ号'></input>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='email'>电子邮箱</label>
      <input type='text' id='email' name='email' placeholder='请输入电子邮箱' value="{{email}}"></input>
    </view>
    <view class='underline'></view>
    <!-- <view class='line'>
      <label class='label' for='verify'>验证码</label>
      <input type='text' id='verify' name='verify' placeholder='请输入验证码' class='verify'></input>
      <image class='verify' src='{{verify}}' bindtap='changeVerify'></image>
    </view>
    <view class='underline'></view> -->
    <button type='default' form-type='submit'>下一步</button>

  </form>
</view>

<import src="../../../templates/footer" />
<template is="join" data="{{text: 'forbar'}}" />