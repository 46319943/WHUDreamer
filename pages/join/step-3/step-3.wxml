<view class='page-body'>
  <form catchsubmit="formSubmit">
    <view class='line'>
      <label class='label' for='area'>区域</label>
      <picker bindchange="areaPickerChange" id='area' name='area' value="{{indexOfArea}}" range="{{area}}">
        <view class="picker">
          {{area[indexOfArea]}}
        </view>
      </picker>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='building'>宿舍楼</label>
      <picker bindchange="buildingPickerChange" id='building' name='building' value="{{indexOfBuilding}}" range="{{building}}">
        <view class="picker">
          {{building[indexOfBuilding]}}
        </view>
      </picker>
    </view>
    <view class='underline'></view>
    <view class='line'>
      <label class='label' for='number'>门牌号</label>
      <input type='number' id='number' name='number' placeholder='请输入门牌号'></input>
    </view>
    <view class='underline'></view>
    <button type='primary' form-type='submit'>下一步</button>

  </form>
</view>

<import src="../../../templates/footer" />
<template is="join" data="{{text: 'forbar'}}" />