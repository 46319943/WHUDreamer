/* pages/user/user.wxss */
.picture{
  height: 500rpx;
}
.picture > .background{
  height: 400rpx;
  /* 在js中定义了背景，添加交互性 */
  /* background: "http://i4.bvimg.com/578488/2ef836f9d7c84adc.jpg"; */
  filter: blur(2px);
}
.picture > .avatar{
  position: relative;
}
.avatar > image{
  height: 250rpx;
  width: 250rpx;
  padding: 10rpx;
  background: white;
  position: relative;
  bottom: 200rpx;
}

.title{
  /* margin-top: 50rpx; */
  margin-bottom: 20rpx;
}
.title > .name{
  font-size: 1.5em;
  font-weight: bold;
}
.title > .position{
  color: #aaa;
  margin-bottom: 30rpx;
}
.detail{
  color: #aaa;
  padding-left: 15%;
}
.detail > .key{
  float: left;
  width: 20%;
  margin-right: 10%;
  text-align: left;
  margin-bottom: 10rpx;
}
.detail > .value{
  float: left;
  width: auto;
  margin-bottom: 10rpx;
}
.clear{
  clear: both;
}