/* 显示信息部分 */
view.information{
    display: flex;
    flex-direction: row;
    /* 交叉轴居中，不知道用不用得上 */
    align-items: center;
    /* 容器高度与照片高度相同 */
    height: calc(350rpx * 0.9);
    width: 90%;
    box-shadow: 0 3rpx 3rpx 3rpx #aaa ;
    border-radius: 5rpx;
    /* 保持圆角 */
    overflow: hidden;
}

view.information > .leftPart{
    height: calc(350rpx * 0.9);
    width: calc(270rpx * 0.9);
    flex-shrink: 0;
}
image.avatar{
    height: 100%;
    width: 100%;
    /* 当没有图片时就显示背景的灰色 */
    background: #aaa;
}

view.information > .rightPart{
    height: calc(300rpx * 0.9);
    display: flex;
    flex-direction: column;
}
view.name{
    font-size: 50rpx;
    flex: 1;
    line-height: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 50rpx;
}
view.seperateLine{
    border-bottom: #ccc 8rpx solid;
}
view.college, view.firstDepartment, view.secondDepartment{
    color: #aaa;
    flex: 1;
    line-height: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 50rpx;
}
view.secondDepartment{
    /* 缩小间距 */
    margin-top: -10rpx;
}

/* 按钮部分 */
button.success{
    width: 80%;
    /* 将两个按钮隔开一点点 */
    margin-bottom: 15rpx;
}
button.fail{
    width: 80%;
    color: red;
}