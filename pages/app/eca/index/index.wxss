page{
    width: 100%;
    height: 100%;
}
.body{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}
.btn{
    width: 30%;
    height: 200rpx;
    background-color: #666666;
    opacity: 0.4;
    color: white;
    border-radius: 10rpx;
    box-shadow: 1rpx 1rpx 10rpx black;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 30rpx;
}
.back{
    position: fixed;
    top: 0;left: 0;right: 0;bottom: 0;
    z-index: -999;
    width: 100%;
    height: 100%;
}
.info{
    position: fixed;
    top: 0;left: 0;right: 0;bottom: 0;
    z-index: 999;
    width: 100%;
    height: 100%;
}