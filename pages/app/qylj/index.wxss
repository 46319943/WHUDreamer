page{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding-bottom: 100px
}

.headBox{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx
}

.headLeft{
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    
}

.headLeft>view{
    text-align: left
}

.headRight{
    width: 60px;
    height: 50px;
    background-color: #CC0033;
    color: white;
    font-size: 15px;
    word-wrap: break-word;
    font-weight: 600;
    padding-left: 5px;
    padding-right: 5px;
    border-radius: 5px
}

.giftList{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center
}

.giftBox{
    width: 100%;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    border-bottom: solid 1rpx #999999;
    border-top: solid 1rpx #999999;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center
}

.giftHeadBox{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center
}

.giftInfoBox{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start
}

.giftInfoBox>view{
    text-align: left;
    color: #999999; font-size: 15px
}

.pageBox{
    position: fixed;
    bottom: 50px;
    left: 0;
    right: 0;
    height: 50px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 40px;
    padding-right: 40px;
    padding-top: 10px;
    padding-bottom: 10px;
    background-color: white;
    box-shadow: 0 -2px 10px #999999
}

.btn{
    width: 100px;
    height: 40px;
    font-size: 12px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
}

.tabBox{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    background-color: white;
    padding-left: 30px;
    padding-right: 30px
}

.div{
    width: 1px;
    height: 45px;
    background-color: #999999;
}

.tab{
    height: 100%;
    width: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: solid 4px #0099CC
}