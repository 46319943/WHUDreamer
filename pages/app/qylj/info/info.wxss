page{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    padding-bottom: 100px
}

.list{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center
}

.item{
    width: 100%;
    padding-left: 10px;
    padding-right: 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: solid 1px #999999;
    padding-top: 10px;
    padding-bottom: 10px
}

.label{
    width: auto;
    min-width: 100px;
    text-align: left
}

picker{
    color: #999999;
    flex-grow: 1;
    text-align: left;
    margin-left: 20px
}

input{
    color: #999999;
    flex-grow: 1;
    text-align: left;
    margin-left: 20px
}

.btn{
    background-color: white;
    border: solid 1px #009966;
    color: #009966;
    border-radius: 10px;
    width: 80%;
    margin-top: 20px
}