button{
  border: none;
  background: transparent !important;
  color: black;
  font-size: 30rpx;
  
  
  
}



.body {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-left: 60rpx;
  padding-right: 60rpx;
  margin-bottom: 120rpx;
  overflow: scroll;
}

.head {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #CCCCCC;
  text-align: left;
  border-bottom: solid #CCCCCC 3rpx
}

.box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: flex-start;
  color: black;
  height: 190rpx;
  border-bottom: solid #CCCCCC 3rpx;
  text-align: left
}

.bottom {
  position: fixed;
  bottom: 0;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-top: solid #CCCCCC 3rpx;
  background-color: white
  
}

.divd {
  width: 3rpx ;
  height: 80rpx;
  background-color: #CCCCCC;
  
}

.bottombut {
  width: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-grow: 1
}